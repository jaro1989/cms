{% extends 'admin/body.html.twig' %}

{% block content %}
    <div id="page-html"></div>



{% endblock %}



{% block javascripts %}

    {{ parent() }}

    <script>
        var locale = '{{ app.request.locale }}';

        var lbl = {
            _pagename:   '{{ '_LIST_USER'|trans({}, 'admin') }}',
            _username:   '{{ '_USERNAME'|trans({}, 'admin') }}',
            _active:     '{{ '_ACTIVE'|trans({}, 'admin') }}',
            _email:      '{{ '_EMAIL'|trans({}, 'admin') }}',
            _created_at: '{{ '_CREATED_AT'|trans({}, 'admin') }}'
        };

        var path = {
            create:      '{{ path('_user_create') }}',
            list_trash:  '{{ path('_user_list_trash') }}',
            to_trash:    '{{ path('_user_to_trash') }}',
            switch_list: '{{ path('_user_switch_list', {'type': 'list'}) }}'
        };

        var data = {{data|json_encode|raw}};
        var count_page = {{count_page}};
        var current_page = {{current_page}};

        // ID элемента для вставки полей
        var APPEND_ELEMENT = '#page-html';

        new ui.List('id', 'list-user', locale)
            .setTitle(lbl._pagename, null)

            .setTitleSearch(null, 'поиск существующих пользователей')
            .newLineSearchFields()
            .addTextField(null, 'username', lbl._username, false)
            .addTextField(null, 'email', lbl._email, false)
            .addRadioField(0, 'isActive', lbl._active, {'': 'Все', 0: 'Нет', 1: 'Да'}, false, 12)
            .addReadOnlyField(null, null, null, null)

            .setLinkAddEndEdit(path.create)
            .setLinkTrash(path.list_trash)
            .setDataAjaxPagination('pagination', path.switch_list)
            .setDataAjaxSearch('search', path.switch_list)
            .setDataAjaxRemove('remove', path.to_trash)

            .setTypeTable('bordered')

            .newRowHead()
            .addCellHead(lbl._created_at, 1, 1, true, 5, null)
            .addCellHead(lbl._username, 1, 1, true, 5, null)
            .addCellHead(lbl._email, 1, 1, true, 5, null)
            .addCellHead(lbl._active, 1, 1, true, 2, null)

            .addRowsBody(data)
            .addColumn('created_at', 'text')
            .addColumn('username', 'link')
            .addColumn('email', 'link')
            .addColumn('isActive', 'text')

            .setCountPages(count_page)
            .setCurrentPage(current_page)

            .appendHTML(APPEND_ELEMENT);
    </script>

{% endblock %}