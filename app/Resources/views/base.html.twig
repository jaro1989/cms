<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('/admin/css/bootstrap.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('/admin/css/bootstrap-add.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('/admin/calendar/jquery-ui.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        {% block addstyles %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body style="padding-top: 50px;">
        <div id="navbar-top"></div>

        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('/admin/js/jquery-1.12.3.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/admin/js/bootstrap.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/admin/calendar/jquery-ui.js') }}" type="text/javascript"></script>
            <script src="{{ asset('/admin/js/html-builder.js') }}" type="text/javascript"></script>
            <script>
                new HTML.Navbar()
                        .setDataAjax('{{ url('_navbar') }}', {})
                        .setHomeMenu('home', 'Project name', 'http://lib.js/app/index.php')
                        //Add additionally items menu
                        .addLeftItem('DropDown', null, 'star', false)
                        .addLeftSubItem('Item - 1', '#', 'star', false)
                        .addLeftSubItem('Item - 2', '#', 'star', true)
                        .addLeftSubItem('Item - 3', '#', 'star', false)

                        .addLeftItem('Link', '#', 'star', false)

                        .setSkinMenu('inverse')
                        .setTypeMenu('fixedtop')
                        .appendHtml('#navbar-top');

            </script>
        {% endblock %}
        {% block addscripts %}{% endblock %}
    </body>
</html>
